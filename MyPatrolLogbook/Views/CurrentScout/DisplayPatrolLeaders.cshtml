<!--Points to the viewmodel class-->
@model MyPatrolLogbook.ViewModels.CurrentScoutListViewModel

<br/>

<div class="row pt-4">

    <div class="col-6 text-start">
        <h2 style="color:#444444">List of Current Patrol Leaders in your Troop</h2>
        <br />
    </div>

    <div class="col-6 text-end">
        <!--Anchor Tag that redirects the user to a new page if it's been clicked-->
        <a asp-controller="CurrentScout" asp-action="Index" class="btn btn-primary">Back to All Current Scouts</a>
    </div>
</div>

<br />
<div class="table-responsive">
<!--Table that displays the products saved in the database-->
<table class="tableSlide2" style="width:100%">
    <!--Table headings-->
    <thead>
        <tr>
            <th style="text-align: center; vertical-align: middle;">
                SSA ID
            </th>
            <th style="text-align: center; vertical-align: middle;">
                Scout Name
            </th>
            <th style="text-align: center; vertical-align: middle;">
                Patrol Name
            </th>

            <th></th>
        </tr>
    </thead>
    <!--Table body-->
    <tbody>
        @foreach (var user in Model.CurrentScouts)
        {
            <tr>
                <td style="text-align: center; vertical-align: middle;">
                    @user.SSAID
                </td>
                <td style="text-align: center; vertical-align: middle;">
                        @user.FirstName
                        @user.LastName
                    </td>
                <td style="text-align: center; vertical-align: middle;">
                        @foreach (var patrol in Model.Patrols)
                        {
                            @if (user.PatrolId == patrol.PatrolId.ToString())
                            {
                                @patrol.PatrolName
                            }
                        }
                    </td>
                    <td width="10%">
                        <!--Anchor Tags that redirects the user to a new page if it's been clicked-->
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="CurrentScout" asp-action="Edit" asp-route-id="@user.Id"
                       class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Update</a>

                            <a asp-controller="CurrentScout" asp-action="Delete" asp-route-id="@user.Id"
                       class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i>Remove</a>
                        </div>
                    </td>
            </tr>

        }
    </tbody>

</table>
</div>


<br />
<br />
<br />

<div class="table-responsive">
    <table class="table">
        <tr>
            <td>
                <div class="image-container-cust-pl">
                    <!-- Your images here -->
                    <div class="imageRef">
                        <img src="/img/newts.png" alt="Image of Current PLs">
                        <div class="cap">
                            Image Ref: Pictotraductor, n.d.
                        </div>

                    </div>
                    <!-- Add more images as needed -->
                </div>
            </td>
        </tr>
    </table>
</div>
