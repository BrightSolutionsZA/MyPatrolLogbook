@model ApplicationUser

<form method="post" asp-action="EditScoutDetails">
	<div class="custom-border p-3 mt-4" style="position: relative;">
		<div class="row pb-2">
			<!--Displays heading-->
			<h2 style="color:#444444">Update Scout's Patrol Information</h2>
			<hr />
		</div>

	<!--Displays the information that the user has saved regarding the Product-->
	<div class="mb-3">
		<label asp-for="SSAID">SSA ID</label>
		<input asp-for="SSAID" disabled class="form-control" />
	</div>

	<!--Displays the information that the user has saved regarding the Product-->
	<div class="mb-3">
		<label asp-for="FirstName">First Name</label>
		<input asp-for="FirstName" disabled class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="LastName">Last Name</label>
		<input asp-for="LastName" disabled class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="PatrolId">Patrol Name</label>
			<!--Html.DropDownList("PatrolJobsSelected", ViewBag.PatrolJobDropDown as List<SelectListItem>, "-- Select Patrol Job --", new { class = "form-control" })-->
			@Html.DropDownListFor(m => m.PatrolId,  ViewBag.scoutsPatrolList as List<SelectListItem>,"-- Select an Option --", new { @class = "form-control custom-dropdown" })
	</div>


	<div class="mb-3">
		<label asp-for="IsPatrolLeader">Is the Scout a Patrol Leader?</label>
		<!--Html.DropDownList("PatrolJobsSelected", ViewBag.PatrolJobDropDown as List<SelectListItem>, "-- Select Patrol Job --", new { class = "form-control" })-->
			@Html.DropDownListFor(m => m.IsPatrolLeader,  ViewBag.IsPlList as List<SelectListItem>,"-- Select an Option --", new { @class = "form-control custom-dropdown" })
	</div>

	<br />
	<br />

	<!--Button that allows the user to edit teh entry in the database-->
		<button type="submit" class="btn btn-primary" style="width:240px">Update Scout's Details</button>

	<!--Anchor Tag that redirects the user to a new page if it's been clicked-->
	<a asp-controller="CurrentScout" asp-action="Index" class="btn btn-secondary" style="width:240px">Back to List of Current Scouts</a>

		<br />
		<br />
		<img src="/img/orb4.png" alt="Image of Orbs" class="img-fluid" style="position: absolute; bottom: 0; right: 0;">
	</div>
</form>