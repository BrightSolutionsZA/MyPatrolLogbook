@model ApplicationUser

<form method="post" asp-action="ConfirmScoutDetails">
	<div class="custom-border p-3 mt-4" style="position: relative;">
		<div class="row pb-2">
			<!--Displays heading-->
			<h2 style="color:#444444">Assign Scout to a Patrol</h2>
			<hr />
		</div>

		<!--Displays the information that the user has saved regarding the Product-->
		<div class="mb-3">
			<label asp-for="SSAID">SSA ID</label>
			<input asp-for="SSAID" disabled class="form-control" />
		</div>

		<!--Displays the information that the user has saved regarding the Product-->
		<div class="mb-3">
			<label asp-for="FirstName">First Name</label>
			<input asp-for="FirstName" disabled class="form-control" />
		</div>

		<div class="mb-3">
			<label asp-for="LastName">Last Name</label>
			<input asp-for="LastName" disabled class="form-control" />
		</div>

		<div class="mb-3">
			<label asp-for="Email">Email</label>
			<input asp-for="Email" disabled class="form-control" />
		</div>
		
		<!--Displays the information that the user has saved regarding the Product-->
		<div class="mb-3">
			<label asp-for="PatrolId">Patrol Name</label>
		@Html.DropDownList("PatrolList", ViewBag.patrolList as SelectList, "Please select the Scout's Patrol", new { @class= "form-control custom-dropdown" })
		</div>

		<div class="form-group">
			<label for="IsPLDropDown">Is the Scout a Patrol Leader?</label>
		@Html.DropDownList("IsPLDropDown", ViewBag.Items as List<SelectListItem>, "-- Select an Option --", new { @class = "form-control custom-dropdown" })
		</div>

		<br />
		<br />

		<!--Button that allows the user to edit teh entry in the database-->
		<button type="submit" class="btn btn-primary" style="width:240px">Save Scout's Details</button>

		<!--Anchor Tag that redirects the user to a new page if it's been clicked-->
		<a asp-controller="NewScout" asp-action="Index" class="btn btn-secondary" style="width:240px">Back to List of New Scouts</a>

		<br />
		<br />
		<img src="/img/orb4.png" alt="Image of Orbs" class="img-fluid" style="position: absolute; bottom: 0; right: 0;">
	</div>
</form>