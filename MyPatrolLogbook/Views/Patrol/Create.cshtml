<!--Points to the model class-->
@model Patrol


<form method="post">
	<div class="custom-border p-3 mt-4" style="position: relative;">
		<div class="row pb-2">
			<!--Displays heading-->
			<h2 style="color:#444444">Add New Patrol</h2>
			<hr />
		</div>
		<!--Displays the information that the user is required to input as well as where it should be saved-->
		<div class="mb-3">
			<label asp-for="PatrolName"></label>
			<input asp-for="PatrolName" class="form-control" />
			<span asp-validation-for="PatrolName" class="text-danger"></span>
		</div>

		<br />

		<div class="mb-3">
			<label asp-for="HasPatrolCorner">Has Patrol Corner?</label>
			@Html.DropDownList("PatrolCorner", ViewData["PatrolCorner"] as SelectList, "-- Select an Option --", new { @class= "form-control custom-dropdown" })
			@Html.ValidationMessage("PatrolCorner", "", new { @class = "text-danger" })
		</div>

		<br />
		<br />

		<!--Button that allows the user to add teh entry to the database-->
		<button type="submit" class="btn btn-primary" style="width:200px">Save Patrol</button>

		<!--Anchor Tag that redirects the user to a new page if it's been clicked-->
		<a asp-controller="Patrol" asp-action="Index" class="btn btn-secondary" style="width:200px">
			Back to List of Patrols
		</a>

		<br />
		<br />
		<img src="/img/orb4.png" alt="Image of Orbs" class="img-fluid" style="position: absolute; bottom: 0; right: 0;">
	</div>
</form>