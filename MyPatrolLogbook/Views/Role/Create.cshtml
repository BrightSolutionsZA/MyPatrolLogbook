<!--Points to the model class-->
@model string
@{
    ViewData["Title"] = "CREATE ROLE";
}

<form method="post" asp-action="Create">
	<div class="custom-border p-3 mt-4" style="position: relative;">

		<div class="row pb-2">
			<!--Displays heading-->
			<h2 style="color:#444444">Create a Role</h2>
			<hr />
		</div>

		<div class="form-group">
			<label for="name">Role Name</label>
			<input name="name" type="text" class="form-control" />
			<div asp-validation-summary="All" class="text-danger"></div>
		</div>

		<br/>
		<br/>
		<!--Button that allows the user to add teh entry to the database-->
		<button type="submit" class="btn btn-primary" style="width:200px">Save Role</button>

		<a asp-action="Index" class="btn btn-secondary" style="width:200px">Back to List of Roles</a>

		<br />
		<br />
		<img src="/img/orb4.png" alt="Image of Orbs" class="img-fluid" style="position: absolute; bottom: 0; right: 0;">
	</div>
</form>