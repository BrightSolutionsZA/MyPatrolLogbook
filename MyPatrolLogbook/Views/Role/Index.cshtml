<!--Points to the viewmodel class-->
@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "ROLES";
}
<br />

<div class="row pt-4">

    <div class="col-6 text-start">

        <h2 style="color:#444444">List of Roles</h2>
    </div>

    <div class="col-6 text-end">

        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> &nbsp; Add New Role
        </a>
    </div>


</div>

<br />
<div class="table-responsive">
<table class="tableSlide2" style="width:100%">
    <tr>
        <th style="text-align: center; vertical-align: middle;">Name</th>
        <th style="text-align: center; vertical-align: middle;">Assign Roles to Users</th>
        <th style="text-align: center; vertical-align: middle;">Delete</th>
    </tr>
    
    @foreach (var role in Model)
    {
        <tr>
            <td style="text-align: center; vertical-align: middle;">@role.Name</td>
            <td style="text-align: center; vertical-align: middle;">
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">
                    <i class="bi bi-pencil-square"></i> Assign
                </a>
            </td>
            <td style="text-align: center; vertical-align: middle;">
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash-fill"></i> Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
</div>


<img src="/img/footer1.png" alt="Image of Orbs" class="img-fluid foot" />

