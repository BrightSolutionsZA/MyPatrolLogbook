<!--Points to the viewmodel class-->
@model MyPatrolLogbook.ViewModels.PatrolActivityListViewModel

<br />

<div class="row pt-4">

    <div class="col-6 text-start">
        <h2 style="color:#444444">List of Patrol Activities</h2>
    </div>

    <div class="col-6 text-end">

        <a class="btn btn-primary" asp-action="ExportPatrolActivityInExcel">Download Patrol Activity Information to Excel</a>
        <br />
        <br />
        <form method="post">
            @Html.DropDownList("PatrolList", ViewBag.patrolList as SelectList, "Select a Patrol", new { @class = "custom-dropdown" })

            <input class="btn btn-primary" type="submit" value="Filter by Patrol" />

        </form>
        <br />
        <h4>@ViewData["filterByPatrolActivity"]</h4>
    </div>
</div>

<br />
<div class="table-responsive">
<!--Table that displays the products saved in the database-->
<table class="tableSlide2" style="width:100%">
        <!--Table headings-->
        <thead>
            <tr>
            <th style="text-align: center; vertical-align: middle;">
                    Activity Name
                </th>
            <th style="text-align: center; vertical-align: middle;">
                    Permit ID
                </th>
            <th style="text-align: center; vertical-align: middle;">
                    Activity Start Date
                </th>
            <th style="text-align: center; vertical-align: middle;">
                    Activity End Date
                </th>
            <th style="text-align: center; vertical-align: middle;">
                    Venue Name
                </th>
            <th style="text-align: center; vertical-align: middle;">
                    Activity Description
                </th>
            <th style="text-align: center; vertical-align: middle;">
                    Attendance
                </th>
            </tr>
        </thead>
        @if (Model != null && Model.Activities != null && Model.Activities.Any())
        {
            <!-- Table body -->
            <tbody>
                @foreach (var activity in Model.Activities)
                {@if (activity != null && activity.ActivityName != null)
                    {
                        <tr>
                        <td style="text-align: center; vertical-align: middle;">
                                @activity.ActivityName
                            </td>
                        <td style="text-align: center; vertical-align: middle;">
                                @activity.PermitId
                            </td>
                        <td style="text-align: center; vertical-align: middle;">
                                @activity.StartDateTimeStr
                            </td>
                        <td style="text-align: center; vertical-align: middle;">
                                @activity.EndDateTimeStr
                            </td>
                        <td style="text-align: center; vertical-align: middle;">
                                @activity.VenueName
                        </td>
                        <td style="text-align: center; vertical-align: middle;">
                                @activity.ActivityDescription
                            </td>
                        <td style="text-align: center; vertical-align: middle;">
                                @activity.ActivityAttendance
                            </td>
                        </tr>
                    }
                }
            </tbody>
        }
        else if (Model != null && (Model.Activities == null || !Model.Activities.Any()))
        {
            <tr>
            <td style="text-align: center; vertical-align: middle;" colspan="7">No Patrol Activities Available For Selected Patrol</td>
            </tr>
        }
        else
        {
            <tr>
            <td style="text-align: center; vertical-align: middle;" colspan="7">Please Filter by a Specific Patrol</td>
            </tr>
        }

</table>
</div>

<br />
<br />
<br />

<div class="table-responsive">
    <table class="table">
        <tr>
            <td>
                <div class="image-container-cust2">
                    <!-- Your images here -->
                    <div class="imageRef">
                        <img src="/img/activitycropped.png" alt="Image of Activity">
                        <div class="cap">
                            Image Ref: Shutterstock, n.d.
                        </div>

                    </div>

                    <div class="imageRef">
                        <img src="/img/bowling.jpeg" alt="Image of Bowling">
                        <div class="cap">
                            Image Ref: Nesterenko, n.d.
                        </div>

                    </div>
                </div>
            </td>
        </tr>
    </table>
</div>
