<!--Points to the model class-->
@model Troop

<form method="post">
	<div class="custom-border p-3 mt-4" style="position: relative;">
		<div class="row pb-2">
			<!--Displays heading-->
			<h2 style="color:#444444">Add New Troop</h2>
			<hr />
		</div>

		<!--Displays the information that the user is required to input as well as where it should be saved-->
		<div class="mb-3">
			<label asp-for="TroopName"></label>
			<input asp-for="TroopName" class="form-control" />
			<span asp-validation-for="TroopName" class="text-danger"></span>
		</div>

		<br />
		<br />

		<!--Button that allows the user to add teh entry to the database-->
		<button type="submit" class="btn btn-primary" style="width:200px">Save Troop</button>

		<!--Anchor Tag that redirects the user to a new page if it's been clicked-->
		<a asp-controller="Troop" asp-action="Index" class="btn btn-secondary" style="width:200px">
			Back to List of Troops
		</a>
		
		<br />
		<br />

		<img src="/img/orb4.png" alt="Image of Orbs" class="img-fluid" style="position: absolute; bottom: 0; right: 0;">
	</div>
</form>